<%= form_for @event do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    
    <%= f.label :info %><br>
    <%= f.text_area :info %><br>
    
    <%= f.label :starts_at %><br>
    <%= f.datetime_field :starts_at%><br>
    
    <%= f.label :ends_at %><br>
    <%= f.datetime_field :ends_at%><br>

    <%= f.collection_check_boxes :location, @locations, :id, :name %>
    <%= f.fields_for :location, @event.location do |location_field| %>
        <%= location_field.text_field :name %>
        <%= location_field.text_field :address %>
        <%= location_field.text_area :info %>
    <% end %>

    <%= f.submit %>
<% end %>