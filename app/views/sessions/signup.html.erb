
<%= form_tag signup_path do %>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <label>Name:</label><br>
    <%= text_field_tag :'login[name]' %><br>

    <label>Email:</label><br>
    <%= text_field_tag :'login[email]' %><br>

    <label>Username:</label><br>
    <%= text_field_tag :'login[username]' %><br>

    <label>Password:</label><br>
    <%= password_field_tag :'login[password]' %><br>

    <%= submit_tag "Sign Up" %>
<% end %>